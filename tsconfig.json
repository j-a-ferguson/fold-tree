{
    "compilerOptions": {
        "target": "ES5",
        "module": "CommonJS",
        "sourceMap": true, 
        "outDir": "build",
        "strict": true,
        "rootDir": "source"        
    },    
    "scripts": {        
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint src --ext ts",
        "test": "jest"
      },
    "include": ["source/**/*.ts"],
    "typedocOptions": {
        "entryPoints": [
            "source/ast.ts", 
            "source/def.ts", 
            "source/lexer.ts", 
            "source/parser.ts"
        ], 
        "out": "docs"
    }
}