{
    "compilerOptions": {
        "target": "ES5",
        "module": "CommonJS",
        "sourceMap": true, 
        "outDir": "build",
        "strict": true,
        "rootDir": "source"        
    },    
    "include": ["source/**/*.ts"],
    "typedocOptions": {
        "entryPoints": [
            "source/ast.ts", 
            "source/def.ts", 
            "source/lexer.ts", 
            "source/parser.ts"
        ], 
        "out": "docs"
    }
}