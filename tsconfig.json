{
    "compilerOptions": {
        "target": "ES5",
        "module": "CommonJS",
        "sourceMap": true, 
        "outDir": "build",
        "strict": true,
        "rootDir": "source"        
    },    
    "scripts": {        
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint src --ext ts",
        "test": "jest"
      },
    "include": ["source/**/*.ts"]
}